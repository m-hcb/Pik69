<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayank.faceapp.MainActivity"
    android:background="@drawable/background">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white_24dp"
        android:id="@+id/add"
        app:backgroundTint="#000000"
        android:layout_above="@+id/camera"
        android:layout_centerHorizontal="true" />



    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo_library_white_24dp"
        android:id="@+id/gallery"
        android:elevation="8dp"
        android:visibility="invisible"
        android:layout_marginTop="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_white_24dp"
        android:id="@+id/camera"
        android:visibility="invisible"
        android:layout_alignTop="@+id/gallery"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/camera"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <!--
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
        -->

   <com.example.mayank.faceapp.FaceOverlayView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/face_overlay"
        android:layout_width="match_parent"
        android:layout_height="160dp"
       android:layout_above="@+id/button"
       android:layout_alignParentStart="true" />


</RelativeLayout>
